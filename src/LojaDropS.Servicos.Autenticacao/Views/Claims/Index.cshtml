
@{
    ViewData["Title"] = "Claims";
}

<h2>Claims</h2>

<h3>
    @User.Identity.Name
</h3>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>Type</td>
            <td>Value</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in User.Claims)
        {
            <tr>
                <td> @claim.Type </td>
                <td>
                    @claim.Value
                </td>
            </tr>

        }
    </tbody>
</table>
